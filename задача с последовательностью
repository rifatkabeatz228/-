
#include <iostream>
#include<cmath>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int b = 0;
	int m = 0;
	int a[11] = { 1, 3, 5, 6, 7, 8, 4, 3, 7, 9, 0 };
	for (int i = 1; i < 11; i++) {
		if (a[i] < a[i + 1]) {
			b = b + 1;
		}
		else {
			b = b;

		}
		if (a[i] > a[i + 1]) {
			m = m + 1;
		
		}
		else {
			m = m;
		}
		
	}

	if (b > m) {
		cout << b << endl;
	}
	else {
		cout << m << endl;
	}

}
