
#include <iostream>
#include <cmath>
using namespace std;
void create(int* x, int n)
{
	cout << endl;
	for (int i = 0; i < n; i++)
	{
		cout << "x[" << i << "]=";
		cin >> x[i];
	}
}
void show(int* x, int n)
{
	for (int i = 0; i < n; i++)
		cout << "x[" << i << "]=" << x[i] << endl;
}
int main()
{
	int j, i, n = 20;
	double t, y;
	double* x = new double[3];
	double* u = new double[n + 1];
	u[0] = 1.0;
	x[0] = -0.4;
	x[1] = 2.4;
	x[2] = 5.0;
	for (i = 0; i < 3; i++)
	{
		t = x[i];
		y = 3.5*sin(t)*sin(t) - 2.7*sin(t) + 1;
		for (j = 1; j <= n; j++)
			u[j] = 2 / (3 * u[j - 1]) + y / (3 * u[j - 1] * u[j - 1]);
		cout<< u[n]<< " ";
	}
	system("pause");
	return 0;

}


