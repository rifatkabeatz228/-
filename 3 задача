#include <iostream>
#include<cmath>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int b = 0;
	int i = 1;
	int max = 0;
	int a[11] = { 1, 3, 5, 6, 7, 8, 4, 9, 7, 9, 0 };
	int c;
	for (i; i < 11; i++) {
		if (a[i] > max) {
			max = a[i];
		
		}
	}cout << "максимум равен : " << max << endl;
	//не знаю почему не работает второй цикл, скинул чтобы показать что пытался
	for (i; i < 11; i++) {
		if (a[i]==max) {
			b++;

		}
	}
	cout <<"количество максимумов : "<< b <<" ";
	
	
	
}
